<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="enable_install_shortcut_api">false</bool>
    <bool name="notification_dots_enabled">true</bool>
    <style name="Base.Theme.AppCompat" parent="Base.V26.Theme.AppCompat"/>
    <style name="Base.Theme.AppCompat.Light" parent="Base.V26.Theme.AppCompat.Light"/>
    <style name="Base.V26.Theme.AppCompat" parent="Base.V23.Theme.AppCompat">
        <!-- We can use the platform styles on API 26+ -->
        <item name="colorError">?android:attr/colorError</item>
    </style>
    <style name="Base.V26.Theme.AppCompat.Light" parent="Base.V23.Theme.AppCompat.Light">
        <!-- We can use the platform styles on API 26+ -->
        <item name="colorError">?android:attr/colorError</item>
    </style>
    <style name="Base.V26.Widget.AppCompat.Toolbar" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:touchscreenBlocksFocus">true</item>
        <item name="android:keyboardNavigationCluster">true</item>
    </style>
    <style name="Base.Widget.AppCompat.Toolbar" parent="Base.V26.Widget.AppCompat.Toolbar"/>
    <style name="SettingsTheme_Light" parent="SettingsTheme.Base">
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="iconShapeTint">@color/transparentish</item>
    </style>
    <style name="WidgetContainerTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">#E8EAED</item>
        <item name="android:textColorSecondary">?android:attr/textColorPrimary</item>
        <item name="android:colorEdgeEffect">?android:attr/textColorSecondary</item>
        <item name="bottomSheetNavBarColor">#00000000</item>
    </style>
    <style name="WidgetContainerTheme.Black" parent="AppTheme.Black">
        <item name="android:colorEdgeEffect">?android:attr/textColorSecondary</item>
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="bottomSheetNavBarColor">#00000000</item>
    </style>
    <style name="WidgetContainerTheme.Dark" parent="AppTheme.Dark">
        <item name="android:colorEdgeEffect">?android:attr/textColorSecondary</item>
        <item name="android:colorPrimaryDark">#616161</item> <!-- Gray 700 -->
        <item name="bottomSheetNavBarColor">#00000000</item>
    </style>
</resources>